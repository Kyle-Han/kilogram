<UserControl x:Class="Telegram.ThreeDotUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="39" d:DesignWidth="74">
    
    <Grid x:Name="LayoutRoot">
    	<Grid HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="74">
    		<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="7" Margin="12,14,0,0" Stroke="Black" VerticalAlignment="Top" Width="7" RenderTransformOrigin="17,25.7" StrokeThickness="0"/>
    		<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="7" Margin="24,14,0,0" Stroke="Black" VerticalAlignment="Top" Width="7" RenderTransformOrigin="17,25.7" StrokeThickness="0"/>
    		<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="7" Margin="36,14,0,0" Stroke="Black" VerticalAlignment="Top" Width="7" RenderTransformOrigin="17,25.7" StrokeThickness="0"/>
    		<Rectangle Fill="#00F4F4F5" HorizontalAlignment="Left" Height="39" Stroke="Black" StrokeThickness="0" VerticalAlignment="Top" Width="74"/>
    	</Grid>

    </Grid>
</UserControl>