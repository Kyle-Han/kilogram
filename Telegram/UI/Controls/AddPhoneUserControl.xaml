<UserControl x:Class="Telegram.AddPhoneUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="27" d:DesignWidth="456" Height="80">
    
    <Grid x:Name="LayoutRoot" Height="80">
    	<TextBlock TextWrapping="Wrap" Text="phone" Margin="62,14,20,16" FontSize="37.333" VerticalAlignment="Center"/>
    	<Image Margin="12,25,0,17" Source="/Assets/UI/appbar.new.png" Stretch="Fill" Height="38" VerticalAlignment="Center" HorizontalAlignment="Left" Width="38"/>
    	<Ellipse HorizontalAlignment="Left" Height="38" Margin="12,25,0,0" Stroke="White" VerticalAlignment="Top" Width="38" StrokeThickness="3"/>

    </Grid>
</UserControl>