<UserControl x:Class="Telegram.ProgressBarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="480">
            <TextBlock Height="32" 
                       HorizontalAlignment="Center" TextWrapping="Wrap" Text="Please Wait" VerticalAlignment="Center" Margin="190,42,189,26"/>
            <ProgressBar Height="10" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" IsIndeterminate="True" Margin="190,32,190,0"/>
        </Grid>

    </Grid>
</UserControl>